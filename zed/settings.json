// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "inline_completion_provider": "none",
    "copilot": false
  },
  "ui_font_size": 22,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_weight": 600,
  "buffer_font_size": 21.3,
  "vim_mode": true,
  "theme": "DraculaCustom",
  "cursor_blink": false,
  "vertical_scroll_margin": 5,
  "gutter": {
    "line_numbers": false
  },
  "current_line_highlight": "none",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "show_completions_on_input": false,
  "auto_signature_help": false,
  "scrollbar": {
    "cursors": false,
    "diagnostics": false,
    "selected_symbol": false,
    "git_diff": false, // buggy, diffs are shown always
    "search_results": false,
    "show": "never" // disable until git_diff is fixed
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "languages": {
    "Dart": {
      "formatter": {
        "external": {
          "command": "/home/omer/bin/dartfmt_stdin",
          "arguments": []
        }
      },
      "format_on_save": "off", // dart format can take a long time
      "wrap_guides": [80],
      "tab_size": 2
    }
  },
  "format_on_save": "off",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  }
}
