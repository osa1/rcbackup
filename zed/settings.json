// https://zed.dev/docs/configuring-zed
{
  "agent_ui_font_size": 20.0,
  "agent_buffer_font_size": 15.0,
  "disable_ai": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "features": {
    "edit_prediction_provider": "none",
  },
  "buffer_font_family": "IBM Plex Mono",
  // "buffer_font_family": "JetBrains Mono",
  "buffer_font_weight": 500,
  // "buffer_font_size": 15.0,
  "vim_mode": true,
  "theme": "DraculaCustom",
  "cursor_blink": false,
  "vertical_scroll_margin": 5,
  "gutter": {
    "line_numbers": false,
  },
  "current_line_highlight": "none",
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false,
    },
  },
  "show_completions_on_input": false,
  "auto_signature_help": false,
  "scrollbar": {
    "cursors": false,
    "diagnostics": "none", // doesn't matter as scrollbar is disabled below
    "selected_symbol": false,
    "git_diff": false, // buggy, diffs are shown always
    "search_results": false,
    "show": "never", // disable until git_diff is fixed
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
  },
  "inlay_hints": {
    "enabled": false,
  },
  "languages": {
    "Dart": {
      "formatter": {
        "external": {
          "command": "/usr/local/google/home/omersa/bin/dartfmt_stdin",
          "arguments": [],
        },
      },
      "wrap_guides": [80],
      "tab_size": 2,
    },
    "Rust": {
      "preferred_line_length": 100,
    },
  },
  "format_on_save": "off",
  "autosave": {
    "after_delay": {
      "milliseconds": 1000,
    },
  },
  "lsp": {
    "rust-analyzer": {
      "binary": {},
    },
  },
  "file_types": {
    "C": ["mc"], // MonkeyC
  },
  "lsp_highlight_debounce": 100000000000
}
